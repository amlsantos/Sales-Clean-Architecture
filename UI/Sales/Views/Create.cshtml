@model UI.Sales.Models.CreateSaleViewModel

@{
    ViewBag.Title = "Sales";
    Layout = "~/Shared/Views/_Layout.cshtml";
}

<h2>Create Sale</h2>

@using (Html.BeginForm("Create", "Sales", FormMethod.Post))
{
    <form class="form-horizontal">
        <div class="form-group">
            <label class="control-label">Customer</label>
            @Html.DropDownListFor(p => p.SelectedCustomerId, Model.Customers, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="control-label">Employee</label>
            @Html.DropDownListFor(p => p.SelectedEmployeeId, Model.Employees, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label class="control-label">Product</label>
            @Html.ListBoxFor(p => p.SelectedProductsIds, Model.Products, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
}