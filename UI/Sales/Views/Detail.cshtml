@model Application.Sales.Queries.GetSalesDetail.SaleDetailModel

@{
    ViewBag.Title = "Sales";
    Layout = "~/Shared/Views/_Layout.cshtml";
}

<h2>Sales</h2>

<div class="text-end">
    @Html.ActionLink("Create Sale", "Create", new { id = "" }, new { @class = "btn btn-primary" })
</div>

<table>
    <tr>
        <th>ID</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Date</th>
        <td>@Model.Date.ToString("d")</td>
    </tr>
    <tr>
        <th>Customer id</th>
        <td>@Model.CustomerId</td>
    </tr>
    <tr>
        <th>Customer name</th>
        <td>@Model.CustomerName</td>
    </tr>
    <tr>
        <th>Employee id</th>
        <td>@Model.EmployeeId</td>
    </tr>
    <tr>
        <th>Employee name</th>
        <td>@Model.EmployeeName</td>
    </tr>
    <tr>
        <th>Total price</th>
        <td>$@Model.TotalPrice</td>
    </tr>
    <tr>
        <th>Number of items</th>
        <td>@Model.TotalQuantity</td>
    </tr>
    <table class="table table-striped">
        <tr>
            <th>Product id</th>
            <th>Product name</th>
            <th>Quantity</th>
        </tr>
        @foreach (var product in Model.ProductDetails)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => product.ProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => product.Quantity)
                </td>
            </tr>
        }
    </table>
</table>